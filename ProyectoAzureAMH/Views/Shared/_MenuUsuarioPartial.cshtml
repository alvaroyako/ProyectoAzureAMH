@if (Context.User.Identity.IsAuthenticated)
{
    <li class="nav-item">
        <a class="nav-link text-info"
           asp-controller="Usuarios"
           asp-action="Perfil">
            Perfil
        </a>
    </li>
   
    <li class="nav-item">
        <a class="nav-link text-danger"
           asp-controller="Manage"
           asp-action="LogOut">
            <span style="color:red">
                @Context.User.Identity.Name,
            </span>
            Log Out
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-info"
           asp-controller="Usuarios"
           asp-action="Perfil">
            Log In
        </a>
    </li>
}

